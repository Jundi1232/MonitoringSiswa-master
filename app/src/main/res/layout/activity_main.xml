<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <View
       android:id="@+id/rectangle_1"
       android:layout_width="411dp"
       android:layout_height="180dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:background="@color/birulangit"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
   <View
       android:id="@+id/rectangle_2"
       android:layout_width="411dp"
       android:layout_height="103dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="87dp"
       android:background="@drawable/bg_cardname"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       />
   <View
       android:id="@+id/rectangle_3"
       android:layout_width="365dp"
       android:layout_height="130dp"
       android:layout_alignParentTop="true"
       android:layout_marginTop="26dp"
       android:background="#D9D9D9"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />
   <ImageView
       android:id="@+id/img_siswa"
       android:layout_width="90dp"
       android:layout_height="90dp"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="40dp"
       android:layout_alignParentTop="true"
       android:layout_marginTop="47dp"
       tools:srcCompat="@tools:sample/avatars"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       />
   <TextView
       android:id="@+id/tv_namesiswa"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Name"
       android:letterSpacing="0.1"
       android:typeface="serif"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:textSize="16sp"
       android:layout_marginStart="12dp"
       app:layout_constraintTop_toTopOf="@id/img_siswa"
       app:layout_constraintStart_toEndOf="@id/img_siswa"
       />
<TextView
    android:id="@+id/tv_kelassiswa"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:textSize="14sp"
    android:typeface="serif"
    android:text="Kelas"
    android:letterSpacing="0.1"
   app:layout_constraintStart_toStartOf="@id/tv_namesiswa"
    app:layout_constraintTop_toBottomOf="@id/tv_namesiswa"
    android:layout_marginTop="12dp"
    android:textColor="@color/black"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nama Wali kelas"
    android:textSize="14sp"
    android:letterSpacing="0.1"
    android:typeface="serif"
    android:layout_marginTop="12dp"
    android:textColor="@color/black"
    app:layout_constraintTop_toBottomOf="@id/tv_kelassiswa"
    app:layout_constraintStart_toStartOf="@id/tv_kelassiswa"
    />

<!--   menu1-->
   <ImageView
       android:id="@+id/img_jadwal"
       android:layout_width="60dp"
       android:layout_height="60dp"
      android:src="@drawable/jadwal"
       android:layout_marginTop="75dp"
       android:layout_marginStart="30dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/img_siswa"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:textSize="12sp"
      android:text="Jadwal"
       android:letterSpacing="0.1"
      android:textStyle="bold"
       android:typeface="serif"
       android:textColor="@color/black"
       android:layout_marginTop="12dp"
      app:layout_constraintStart_toStartOf="@id/img_jadwal"
       app:layout_constraintTop_toBottomOf="@id/img_jadwal"
       app:layout_constraintEnd_toEndOf="@id/img_jadwal"
       />
   <ImageView
       android:id="@+id/img_absen"
       android:layout_width="60dp"
       android:layout_height="78dp"
       android:src="@drawable/absen"
       android:layout_marginTop="75dp"
       app:layout_constraintStart_toEndOf="@id/img_jadwal"
       app:layout_constraintEnd_toStartOf="@id/img_tugas"
       app:layout_constraintTop_toBottomOf="@id/img_siswa"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="12sp"
       android:text="Absensi"
       android:textStyle="bold"
       android:letterSpacing="0.1"
       android:typeface="serif"
       android:textColor="@color/black"
       android:layout_marginTop="12dp"
       app:layout_constraintStart_toStartOf="@id/img_absen"
       app:layout_constraintTop_toBottomOf="@id/img_jadwal"
       app:layout_constraintEnd_toEndOf="@id/img_absen"
       />
   <ImageView
       android:id="@+id/img_tugas"
       android:layout_width="60dp"
       android:layout_height="78dp"
       android:src="@drawable/tugas"
       android:layout_marginTop="75dp"
       android:layout_marginEnd="30dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/img_siswa"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="12sp"
       android:text="Tugas"
       android:textStyle="bold"
       android:typeface="serif"
       android:textColor="@color/black"
       android:letterSpacing="0.1"
       android:layout_marginTop="12dp"
       app:layout_constraintStart_toStartOf="@id/img_tugas"
       app:layout_constraintTop_toBottomOf="@id/img_jadwal"
       app:layout_constraintEnd_toEndOf="@id/img_tugas"
       />
<!--batas menu 1-->
   <!--   menu2-->
   <ImageView
       android:id="@+id/img_nilai"
       android:layout_width="60dp"
       android:layout_height="78dp"
       android:src="@drawable/nilai"
       android:layout_marginTop="75dp"
       android:layout_marginStart="30dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/img_jadwal"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="12sp"
       android:text="Nilai"
       android:letterSpacing="0.1"
       android:typeface="serif"
       android:textStyle="bold"
       android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="@id/img_nilai"
       app:layout_constraintTop_toBottomOf="@id/img_nilai"
       app:layout_constraintEnd_toEndOf="@id/img_nilai"
       />
   <ImageView
       android:id="@+id/img_kolsutasi"
       android:layout_width="60dp"
       android:layout_height="78dp"
       android:src="@drawable/kolsutasi"
       app:layout_constraintStart_toEndOf="@id/img_jadwal"
       app:layout_constraintEnd_toStartOf="@id/img_tugas"
       app:layout_constraintTop_toTopOf="@+id/img_nilai"
       />
   <TextView
       android:id="@+id/tv_koslsutasi"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="12sp"
       android:text="Kolsutasi"
       android:letterSpacing="0.1"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:typeface="serif"
       app:layout_constraintStart_toStartOf="@id/img_kolsutasi"
       app:layout_constraintTop_toBottomOf="@id/img_kolsutasi"
       app:layout_constraintEnd_toEndOf="@id/img_kolsutasi"
       />

   <!--batas menu 1-->


</androidx.constraintlayout.widget.ConstraintLayout>